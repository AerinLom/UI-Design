<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopSmart Dashboard</title>

    <!-- Importing Montserrat font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">

    <link href="~/css/dashboardstyle.css" rel="stylesheet" />

</head>

<body>


    <div id="sidebar" class="sidebar">
        <span class="closebtn" onclick="closeSidebar()">×</span>
        <a href="@Url.Action("GroceryList", "Home")">Create List</a>
        <a href="#">Saved Lists</a>
        <a href="#">Popular Products</a>
    </div>




    <div class="main-content">
        <button class="toggle-sidebar" onclick="openSidebar()">☰</button>
        <form asp-controller="Product" asp-action="SearchProducts" method="get" class="search-form">
            <input id="searchInput" type="text" name="Name" placeholder="Search Products..." required class="search-bar">
        </form>
        <div class="dashboard-header">Welcome to ShopSmart</div>

        <div class="button-container">
            <!-- Button for Checkers -->
            <button class="image-button" onclick="window.location.href='@Url.Action("CheckersView", "Product")'">
                <img src="~/images/checkers.png" alt="Checkers">
            </button>

            <!-- Button for Pick n Pay -->
            <button class="image-button" onclick="window.location.href='@Url.Action("PicknPayView", "Product")'">
                <img src="~/images/pnp.png" alt="Pick n Pay">
            </button>

            <!-- Button for Spar -->
            <button class="image-button" onclick="window.location.href='@Url.Action("SparView", "Product")'">
                <img src="~/images/spar.jpg" alt="Spar">
            </button>

            <!-- Button for Woolworths -->
            <button class="image-button" onclick="window.location.href='@Url.Action("WoolworthsView", "Product")'">
                <img src="~/images/ww.png" alt="Woolworths">
            </button>
        </div>


        <div class="card-container">
            <div class="card">
                <h3>Recent List</h3>
                <p>No recent lists available.</p>
                <a href="@Url.Action("GroceryList", "Home")" class="btn">Create New List</a>
            </div>
            <div class="card">
                <h3>Saved Lists</h3>
                <p>View your saved lists.</p>
                <button onclick="viewSavedLists()">View Lists</button>
            </div>
            <div class="card">
                <h3>Popular Products</h3>
                <p>See trending products.</p>
                <button onclick="viewPopularProducts()">View Products</button>
            </div>
        </div>
    </div>

    <script src="~/js/dashboardscripts.js"> </script>


</body>

</html>
