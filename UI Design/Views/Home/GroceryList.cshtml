<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>ShopSmart</title>

    <!-- Importing Montserrat font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
</head>

<body>

    <div id="sidebar" class="sidebar">
        <a href="#" class="closebtn" onclick="toggleSidebar()">x</a>
        <a asp-controller="Home" asp-action="Dashboard">Dashboard</a>
        <a href="#">Products</a>
    </div>

    <header>
        <button class="openbtn" onclick="toggleSidebar()">☰</button>
    </header>

    <main>
        <div class="heading">
            <h2>Create Your List</h2>
        </div>

        <!-- Form for submitting the grocery list -->
        <form asp-controller="Product" asp-action="GenerateList" method="post">
            <div class="form-container">
                <!-- List of grocery inputs -->
                <div class="list-section">
                    <input type="text" name="groceries" placeholder="Enter grocery:">
                </div>
                <div class="list-section">
                    <input type="text" name="groceries" placeholder="Enter grocery:">
                </div>
                <div class="list-section">
                    <input type="text" name="groceries" placeholder="Enter grocery:">
                </div>
                <div class="list-section">
                    <input type="text" name="groceries" placeholder="Enter grocery:">
                </div>
                <div class="list-section">
                    <input type="text" name="groceries" placeholder="Enter grocery:">
                </div>
                <div class="list-section">
                    <input type="text" name="groceries" placeholder="Enter grocery:">
                </div>
                <div class="list-section">
                    <input type="text" name="groceries" placeholder="Enter grocery:">
                </div>

                <!-- Action buttons -->
                <button type="reset">Reset All Fields</button>
                <button type="submit">Generate Your List</button>
            </div>
        </form>

        <!-- Section to display the results -->
        @if (ViewData["CheapestProducts"] != null)
        {
            <div class="results-section">
                <h3>Generated List</h3>
                <ul>
                    @foreach (var product in (List<object>)ViewData["CheapestProducts"])
                    {
                        <li>
                            @if (product is Newtonsoft.Json.Linq.JObject jObject)
                            {
                                @Html.Raw(jObject["ProductName"]?.ToString() + " - " + jObject["Message"]?.ToString())
                            }
                        </li>
                    }
                </ul>
            </div>
        }
    </main>

</body>
</html>
